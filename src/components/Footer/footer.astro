</main>

<script>
  const btns = document.querySelectorAll(".btn");

  btns.forEach((button) => {
    button.addEventListener("click", () => {
      let ref = button.textContent;
      if (ref === "About Me") {
        ref = "About";
      }
      const event = new CustomEvent("navigate", {
        detail: ref,
      });
      window.dispatchEvent(event);
    });
  });
</script>
